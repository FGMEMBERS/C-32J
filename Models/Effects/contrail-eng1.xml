<?xml version="1.0" encoding="UTF-8"?>

    <PropertyList>
     <particlesystem>
       <name>smoke</name>
       <texture>smoke.png</texture>

       <offsets>
         <x-m>15</x-m>
         <y-m>0</y-m>
         <z-m>0</z-m>
       </offsets>
       
       <condition>
         <and>
           <greater-than>
             <property>engines/engine[0]/n2</property>
             <value>50</value>
           </greater-than>
           <greater-than>
             <property>environment/relative-humidity</property>
             <value>70</value>
           </greater-than>
           <less-than>
             <property>environment/temperature-degc</property>
             <value>-38</value>
           </less-than>
           <property>engines/engine[0]/running</property>
         </and>
       </condition>

       <emissive type="bool">false</emissive>
       <lighting type="bool">true</lighting>
       <align>billboard</align> <!-- billboard / fixed -->
       <attach>world</attach>
       
       <placer>
         <type>point</type>  <!-- sector / segments / point -->
       </placer>

       <shooter>
         <theta-min-deg>-100</theta-min-deg>
         <theta-max-deg>100</theta-max-deg>
         <phi-min-deg>-100</phi-min-deg>
         <phi-max-deg>100</phi-max-deg>
         <speed-mps>
           <value>0</value>
           <spread>40</spread>
         </speed-mps>
         <rotation-speed>
           <x-min-deg-sec>0</x-min-deg-sec>
           <y-min-deg-sec>0</y-min-deg-sec>
           <z-min-deg-sec>0</z-min-deg-sec>
           <x-max-deg-sec>0</x-max-deg-sec>
           <y-max-deg-sec>0</y-max-deg-sec>
           <z-max-deg-sec>0</z-max-deg-sec>
         </rotation-speed>
       </shooter>

       <counter>
         <particles-per-sec>
           <value>160</value>
           <spread>80</spread>
         </particles-per-sec>
       </counter>
         
       <align>billboard</align>

       <particle>
            <start>
                <color>
                    <red>
                        <expression>
                            <product>
                                <value>0.7</value>
                                <property>/rendering/scene/diffuse/red</property>
                            </product>
                        </expression>
                    </red>
                    <green>
                        <expression>
                            <product>
                                <value>0.7</value>
                                <property>/rendering/scene/diffuse/green</property>
                            </product>
                        </expression>
                    </green>
                    <blue>
                        <expression>
                            <product>
                                <value>0.7</value>
                                <property>/rendering/scene/diffuse/blue</property>
                            </product>
                        </expression>
                    </blue>
                    <alpha>
                        <value> 0.08 </value>
                    </alpha>
                </color>
                <size>
                    <value>1.1</value>
                </size>
            </start>

            <end>
                <color>
                    <red>
                        <expression>
                            <product>
                                <value>1.0</value>
                                <property>/rendering/scene/diffuse/red</property>
                            </product>
                        </expression>
                    </red>
                    <green>
                        <expression>
                            <product>
                                <value>1.0</value>
                                <property>/rendering/scene/diffuse/green</property>
                            </product>
                        </expression>
                    </green>
                    <blue>
                        <expression>
                            <product>
                                <value>1.0</value>
                                <property>/rendering/scene/diffuse/blue</property>
                            </product>
                        </expression>
                    </blue>
                    <alpha>
                        <value> 0.02 </value>
                    </alpha>
                </color>
                <size>
                    <value>30</value>
                </size>
            </end>

         <life-sec>
           <value>45</value>
         </life-sec>
           
         <mass-kg>  0.01 </mass-kg>
         <radius-m> 50.0 </radius-m>
       </particle>

       <program>
         <fluid> air </fluid>  <!-- air / water -->
         <gravity type="bool"> true </gravity>
         <wind typ="bool">     true </wind>
       </program>

     </particlesystem>

    </PropertyList>

